<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPSHelpMeMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Hello, World!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />

            <!--Basic Example-->
            <!--<Button Text="Load Forecasts via Web API" Clicked="OnLoadClicked" />
            <CollectionView x:Name="ForecastsList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Date}" FontAttributes="Bold" />
                            <Label Text="{Binding TemperatureC}" />
                            <Label Text="{Binding TemperatureF}" />
                            <Label Text="{Binding Summary}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>-->
            
            <!--Beautiful and Modern Example-->
            <Button 
                Text="Load Forecasts via Web API" 
                Clicked="OnLoadClicked"
                BackgroundColor="#3F51B5"
                TextColor="White"
                CornerRadius="10"
                Padding="12"
                Margin="10"
                FontAttributes="Bold"
                FontSize="16" />

            <CollectionView x:Name="ForecastsList" Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame 
                Margin="0,5" 
                Padding="15" 
                CornerRadius="12" 
                HasShadow="True"
                BackgroundColor="#F0F4FF"
                BorderColor="#3F51B5">
                            <StackLayout Spacing="8">
                                <Label 
                        Text="{Binding Date}" 
                        FontAttributes="Bold"
                        FontSize="18"
                        TextColor="#2C3E50" />
                                <Label 
                        Text="{Binding Summary}" 
                        FontAttributes="Italic"
                        FontSize="16"
                        TextColor="#34495E" />
                                <Label 
                        Text="{Binding TemperatureC, StringFormat='Temperature: {0}°C'}"
                        FontSize="14"
                        TextColor="#607D8B" />
                                <Label 
                        Text="{Binding TemperatureF, StringFormat='{0}°F'}"
                        FontSize="14"
                        TextColor="#607D8B" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
